<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cvMain"
        app:cardElevation="5dp"
        app:cardCornerRadius="6dp"
        app:cardBackgroundColor="@color/grey_200"
        app:cardMaxElevation="5dp"
        app:cardPreventCornerOverlap="true">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <android.support.constraint.ConstraintLayout
        android:id="@+id/viewBackground"
        app:layout_constraintTop_toTopOf="@+id/viewForeground"
        app:layout_constraintBottom_toBottomOf="@+id/viewForeground"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="visible"
        android:background="@color/red1"
        android:layout_width="match_parent"
        android:layout_height="0dp">


        <TextView
            android:id="@+id/ivDelete"
            android:text="@string/delete"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:tint="@color/colorPrimary"
            android:layout_marginEnd="10dp"
            android:textSize="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
            android:id="@+id/viewForeground"
        android:background="@color/grey_200"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <lax.lega.rv.com.legalax.common.CustomTextviewBold
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAllCaps="true"
                android:text="@string/submit_legal_problem"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="visible"/>


            <TextView
                android:id="@+id/tvCategory"
                android:text="Description"
                android:layout_marginTop="2dp"
                android:layout_marginStart="10dp"
                android:visibility="visible"
                app:layout_constraintTop_toBottomOf="@+id/tvTitle"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvSubmitDate"
            android:text="Description"
            android:layout_marginTop="2dp"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/madriadpro_regular"
            app:layout_constraintTop_toBottomOf="@+id/tvCategory"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

            <lax.lega.rv.com.legalax.common.CustomTextviewBold
                android:id="@+id/tvView"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:paddingVertical="6dp"
                android:layout_marginEnd="10dp"
                android:paddingHorizontal="20dp"
                android:background="@drawable/bg_white_stroke_green_all_side_10"
                android:text="@string/view"
                android:textSize="18sp"
                android:textColor="@color/colorPrimary"
                android:textAllCaps="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
