<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ll_parentroot"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#FFFFFF"
              android:focusableInTouchMode="true"
              android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="visible">


                <lax.lega.rv.com.legalax.common.CustomTextviewBold
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingTop="30dp"
                    android:text="VERIFICATION"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="32dp"
                    android:textStyle="bold"/>

                <lax.lega.rv.com.legalax.common.CustomTextviewHelvicNormal
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:text="Please type the verification code sent to"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/white"/>

                <lax.lega.rv.com.legalax.common.CustomTextviewHelvicNormal
                    android:id="@+id/tv_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="30dp"
                    android:gravity="center"
                    android:text="+6122554465665"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:textSize="18dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="25dp"
                android:paddingTop="15dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:weightSum="6">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:padding="5dp">

                    <EditText
                        android:id="@+id/ed1_veri"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/outline_for_otpbutton"
                        android:cursorVisible="true"
                        android:inputType="number"
                        android:maxLength="6"
                        android:singleLine="true"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textCursorDrawable="@drawable/color_cursor"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:visibility="gone"

                    android:padding="5dp">

                    <EditText
                        android:id="@+id/ed2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/outline_for_otpbutton"
                        android:cursorVisible="true"
                        android:inputType="number"
                        android:maxLength="1"
                        android:visibility="gone"
                        android:singleLine="true"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textCursorDrawable="@drawable/color_cursor"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:padding="5dp">

                    <EditText
                        android:id="@+id/ed3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/outline_for_otpbutton"
                        android:cursorVisible="true"
                        android:inputType="number"
                        android:maxLength="1"
                        android:singleLine="true"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textCursorDrawable="@drawable/color_cursor"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:visibility="gone"

                    android:padding="5dp">

                    <EditText
                        android:id="@+id/ed4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/outline_for_otpbutton"
                        android:cursorVisible="true"
                        android:inputType="number"
                        android:maxLength="1"
                        android:singleLine="true"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textCursorDrawable="@drawable/color_cursor"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:visibility="gone"

                    android:padding="5dp">

                    <EditText
                        android:id="@+id/ed5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/outline_for_otpbutton"
                        android:cursorVisible="true"
                        android:inputType="number"
                        android:maxLength="1"
                        android:singleLine="true"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textCursorDrawable="@drawable/color_cursor"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:visibility="gone"

                    android:padding="5dp">

                    <EditText
                        android:id="@+id/ed6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/outline_for_otpbutton"
                        android:cursorVisible="true"
                        android:inputType="number"
                        android:maxLength="1"
                        android:singleLine="true"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textCursorDrawable="@drawable/color_cursor"/>
                </LinearLayout>


            </LinearLayout>

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="130dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/icn_submit"
                android:gravity="center"/>


            <lax.lega.rv.com.legalax.common.CustomTextviewHelvicNormal
                android:id="@+id/txt_resend_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:text="Resend code"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>