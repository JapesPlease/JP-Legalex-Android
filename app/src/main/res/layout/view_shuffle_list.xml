<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:background="@drawable/bg_white_stroke_green_all_side_4"
        android:padding="16dp"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:layout_above="@+id/textViewCancel"
        android:orientation="vertical">

        <lax.lega.rv.com.legalax.common.CustomTextviewHelvicNormal
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_one_method"
            android:textColor="@android:color/black"
            android:textSize="16sp" />


        <lax.lega.rv.com.legalax.common.CustomTextviewHelvicNormal
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:text="Users will see Lawyer according to selected shuffle method"
            android:textColor="@android:color/black"
            android:textSize="14sp" />


        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recyclerViewShuffleList"
            android:layout_marginTop="4dp"
            />
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginRight="8dp"
        android:id="@+id/textViewCancel"
        android:background="@drawable/icn_button_bg"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="8dp"
        android:text="Cancel"
        android:layout_alignParentBottom="true"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        android:textSize="18sp" />

    </RelativeLayout>

</RelativeLayout>