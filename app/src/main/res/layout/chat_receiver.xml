<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/tools"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:ignore="NamespaceTypo">

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start">

            <lax.lega.rv.com.legalax.common.CustomTextviewHelvicNormal
                android:id="@+id/txtInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/chat_greyscreen_bg"
                android:padding="8dp"
                android:layout_below="@+id/textSenderName"
                android:visibility="gone"
                android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/grey_700"/>

            <lax.lega.rv.com.legalax.common.CustomTextviewHelvicNormal
                android:id="@+id/textSenderName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="8dp"
                android:visibility="visible"
                android:text="Deepak "
                android:textSize="12sp"
                android:layout_marginBottom="2dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/grey_700"/>


            <lax.lega.rv.com.legalax.common.CustomTextviewHelvicNormal
                android:id="@+id/txt_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textSize="12dp"
                android:layout_below="@+id/txtInfo"
                android:text="Lorem "
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/black"/>

            <android.support.v7.widget.CardView
                android:id="@+id/cv_image_boder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_date"
                android:layout_gravity="center"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="5dp"
                app:contentPadding="2dp"

                card_view:cardCornerRadius="0dp">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:adjustViewBounds="true"
                    android:maxHeight="180dp"
                    android:maxWidth="180dp"
                    android:visibility="visible"
                    android:scaleType="centerCrop"
                   />

                <ImageView
                    android:id="@+id/imageDocument"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:adjustViewBounds="true"
                    android:maxHeight="180dp"
                    android:maxWidth="180dp"
                    android:src="@drawable/document"
                    android:visibility="visible"
                    android:scaleType="centerCrop"
                    />


            </android.support.v7.widget.CardView>
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>